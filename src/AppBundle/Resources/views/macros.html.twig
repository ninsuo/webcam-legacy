{% macro camera_js() %}

    <script type="text/javascript">

        setInterval(function () {

            var val = {{ constant('AppBundle\\Services\\Camera::SLIDER') }};

            if ($('#slider').length) {
                val = $('#slider').slider("option", "value");
            }

            if (val === {{ constant('AppBundle\\Services\\Camera::SLIDER') }}) {
                $('.live').each(function () {
                    var that = $(this);
                    that.attr('src', (that.data('src') + '?tm=' + (Date.now() / 1000 | 0)));
                });
            }

        }, 1000);

    </script>

{% endmacro %}
